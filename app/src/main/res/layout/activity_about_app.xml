<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/aboutback"
  tools:context=".others.AboutAppActivity">


  <android.support.v7.widget.Toolbar
    android:id="@+id/about_tool_bar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:elevation="5dp"
    android:layout_alignParentTop="true"
    android:background="@drawable/background_toolbar">

    <ImageView
      android:id="@+id/about_toolbar_iv_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_back_arrow"/>

    <TextView
      android:id="@+id/about_toolbar_tv_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="About Developer"
      android:textSize="20sp"
      android:textColor="@color/colorWhite"
      android:fontFamily="@font/helvetica"
      android:textStyle="bold"
      android:layout_gravity="center"/>


  </android.support.v7.widget.Toolbar>



  <LinearLayout
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/imageView"
      android:layout_width="110dp"
      android:layout_height="110dp"
      android:layout_marginTop="20dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:src="@drawable/devabhi"
      app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:gravity="center"
      android:orientation="vertical"
      app:layout_constraintTop_toBottomOf="@+id/imageView"
      tools:layout_editor_absoluteX="0dp">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Abhishek Bhardwaj"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        android:textStyle="bold"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_code_black_24dp"
        android:drawablePadding="5dp"
        android:text="Developer / Designer"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="5dp"
        android:text="India"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:drawableTint="@color/colorWhite"
        android:textSize="18dp"/>
    </LinearLayout>


    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:layout_marginTop="12dp"
      app:cardCornerRadius="16dp"
      app:cardElevation="4dp"
      app:cardUseCompatPadding="true"
      app:contentPadding="4dp"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout"
      tools:layout_editor_absoluteX="16dp">


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/pattern">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <ImageView
            android:id="@+id/iv_twitter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            app:srcCompat="@drawable/ic_twitter"/>

          <ImageView
            android:id="@+id/iv_playstore"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_playstore"/>

          <ImageView
            android:id="@+id/iv_instagram"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            app:srcCompat="@drawable/ic_instagram"/>

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:orientation="horizontal">

          <ImageView
            android:id="@+id/iv_linkdin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/ic_linkedin"/>

          <ImageView
            android:id="@+id/iv_facebook"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:clickable="true"
            app:srcCompat="@drawable/ic_fb"/>

          <ImageView
            android:id="@+id/iv_github"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/ic_github"/>

        </LinearLayout>





      </LinearLayout>

    </android.support.v7.widget.CardView>


  </LinearLayout>


  <TextView
    android:id="@+id/tv_version"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_margin="16dp"
    android:textSize="16sp"
    android:textStyle="bold"
    android:fontFamily="@font/helvetica"
    android:textColor="@color/colorWhite"
    android:text="Version name"/>




</RelativeLayout>